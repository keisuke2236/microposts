<div class="row">
  <aside class="col-md-12">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>さんがフォローしている人
      </h1>
    </section>
  </aside>
  <div class="col-md-10">
    <% if @users.any? %>
      <h3>フォローユーザ (<%= @users.count %>)</h3>
      <ol class="microposts">
        <% @users.each do |user| %>
            <% #ここで渡すidはリレーションシップのid %>
            <% #binding.pry %>
            <%= render partial: 'users/following_users', locals: { user: user, usr:@user } %>
        <% end %>
      </ol>
    <% else %>
        <h1>フォローしているユーザーはいません<br /></h1>
    <% end %>
  </div>
</div>