<table class="table table-striped">
    <thead>
      <tr>
        <th><%= gravatar_for @user %></th>
        <th colspan="3"><%= @user.name %>さんのプロフィール</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">名前</th>
        <td><%= @user.name %></td>
      </tr>

      <tr>
        <th scope="row">年齢</th>
        <td><%= @user.age %></td>
      </tr>

      <tr>
        <th scope="row">住まい</th>
        <td><%= @user.area %></td>
      </tr>
      
      <tr>
        <th scope="row">連絡先</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th scope="row">HP</th>
        <td><%= @user.hp %></td>
      </tr>

    </tbody>
  </table>
  

</h1>