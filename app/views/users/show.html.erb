<table class="table table-striped">
    <thead>
      <tr>
        <th><span class="col-md-12">
        <%= 
        if @user[:avatar]==nil 
          gravatar_for @user 
        else 
          image_tag @user.avatar, :size => '80x80' 
        end
        %>
        
        </span>
        
        
        </th>
        <th colspan="3"><span class="col-md-4"><%= link_to "フォローユーザー", following_user_path(@user) ,class: "btn btn-mini btn-info" %></span>
                        <span class="col-md-4"><%= link_to "フォロワー", followers_user_path(@user) ,class: "btn btn-mini btn-info" %></span>
                        <span class="col-md-4"><%= render 'follow_form' if logged_in? %></span>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">名前</th>
        <td><%= @user.name %></td>
      </tr>

      <tr>
        <th scope="row">年齢</th>
        <td><%= @user.age %></td>
      </tr>

      <tr>
        <th scope="row">住まい</th>
        <td><%= @user.area %></td>
      </tr>
      
      <tr>
        <th scope="row">連絡先</th>
        <td><%= @user.email %></td>
      </tr>
      <tr>
        <th scope="row">HP</th>
        <td><%= @user.hp %></td>
      </tr>
    </tbody>
</table>
<hr>
<div class="row">
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  <%= paginate(@feed_items) %>
  <%= page_entries_info(@feed_items) %>
  </div>
</div>