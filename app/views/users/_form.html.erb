    <%= form_for(@user) do |f| %>
        <%  #エラーがあった場合はレンダリングする %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group">
        <label for="message_name" class="control-label col-md-12">名前</label>
        <%= f.text_field :name, class: 'form-control' %>
        <div class="form-group">
        <label for="message_email" class="control-label col-md-12">メールアドレス</label>
        <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
        <label for="message_password" class="control-label col-md-12">パスワード</label>
        <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group">
        <label for="message_password_confirmation" class="control-label col-md-12">パスワード再入力</label>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <%= f.submit "保存する", class: "btn btn-large btn-primary" %>
    <% end %>