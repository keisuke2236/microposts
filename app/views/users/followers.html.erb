<div class="row">
  <aside class="col-md-12">
    <section class="user_info">
      <h1>
        <%= 
        if @user[:avatar]==nil 
          gravatar_for @user 
        else 
          image_tag @user.avatar, :size => '80x80' 
        end
        %>
        <%= @user.name %>さん
      </h1>
    </section>
  </aside>
  <div class="col-md-10">
    <% if @users.any? %>
      <h3>フォロワー (<%= @users.count %>)</h3>
      <ol class="microposts">
        <% @users.each do |user| %>
            <% #ここで渡すidはリレーションシップのid %>
            <% #binding.pry %>
            <%= render partial: 'users/follower_users', locals: { user: user, usr:@user } %>
        <% end %>
      </ol>
    <% else %>
        <h1>フォローされていません<br /></h1>
    <% end %>
  </div>

</div>