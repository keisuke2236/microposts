<header class="navbar navbar-fixed-top navbar-inverse mobile_none">
  <div class="container">
    <%= link_to "Moe Creatores", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "ホーム", root_path %></li>
        <li><%= link_to "タグで探す", tags_show_url %></li>
        
        <% #binding.pry %>
        <% if logged_in? && current_user.creator == true %>
          <% #ユーザーメニュー  %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              ユーザー <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "フォロー", following_user_url(current_user) %></li>
              <li><%= link_to "フォロワー", followers_user_url(current_user) %></li>
            </ul>
          </li>
          
          <% #アカウントメニュー  %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール", current_user %></li>
              <li><%= link_to "基本設定", edit_user_path(current_user) %></li>
              <li><%= link_to 'SNS設定', sns_edit_path(current_user) %></li>
              <li><%= link_to '公式ニュース設定', info_edit_path(current_user) %></li>
              <li><%= link_to '描くイラストのタグ設定', tag_edit_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "ログアウト", logout_path, method: "delete" %></li>
            </ul>
          </li>
        <% else %>
          <% if logged_in? %>
            <li><%= link_to "フォロー", following_user_url(current_user) %></li>
            <li><%= link_to "ログアウト", logout_path, method: "delete" %></li>
          <% else %>
            <li><%= link_to "会員登録", select_path %></li>
            <li><%= link_to "ログイン", login_path %></li>
          <% end %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>