<table class="table table-striped">
    <thead>
      <tr>
        <th colspan="3"  class="col-sm-12">フォローしている絵師の公式ニュース</th>
      </tr>
    </thead>
<tbody>
    <% for i in 0..4 %>
    <% break if @infos[i]==nil %>
        <tr>
            <% #binding.pry %>
            <% @user = User.find_by(id:@infos[i].user_id) %>
            
            <td class="col-sm-2">
            <%= 
                if @user[:avatar]==nil 
                    link_to gravatar_for(@user, size: 40), @user
                else 
                    link_to image_tag(@user.avatar,:size => "40x40", :alt => "アイコン") ,user_path(@user)
                end
            %>
            </td>
            <% if @infos[i].id==current_user.id %>
                <td class="col-sm-2"><%= link_to "【自分の投稿】" ,user_path(@user) %></td>
            <% else %>
                <td class="col-sm-2"><%= link_to @user.name ,user_path(@user) %></td>
            <% end %>
            <td class="col-sm-8"><%= link_to @infos[i].text,@infos[i].link %></td>
        </tr>
    <% end %>
</tbody>
</table>