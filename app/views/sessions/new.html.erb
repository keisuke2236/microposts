<h1>ログインページ</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>
        <div class="form-group">
        <label for="message_email" class="control-label col-md-12">メールアドレス</label>
        <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group">
        <label for="message_password" class="control-label col-md-12">パスワード</label>
        <%= f.password_field :password, class: 'form-control' %>
        </div>
        <%= f.submit "ログイン", class: "btn btn-primary" %>
    <% end %>
    <p>新規登録はこちら！ <%= link_to "会員登録", select_path %>　</p>
  </div>
</div>