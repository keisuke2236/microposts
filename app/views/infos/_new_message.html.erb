<%= form_for(@info) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
        
        <label for="message_text" class="control-label col-md-12">ニュース文</label>
        <%= f.text_field :text, class: 'form-control' %>
        
        <label for="message_link" class="control-label col-md-12">リンク先URL</label>
        <%= f.text_field :link, class: 'form-control' %>
        
    </div>
    <%= f.submit "ニュースを保存する", class: "btn btn-large btn-primary" %>
<% end %>