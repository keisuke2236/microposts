<%= form_for(@tag) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="form-group">
        
        <label for="message_name" class="control-label col-md-12">タグ名</label>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= f.submit "タグを追加", class: "btn btn-large btn-primary" %>
<% end %>