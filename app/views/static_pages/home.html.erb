<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
      <%= render 'shared/user_info' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>絵師の公式更新情報</h3>
      <%= render 'shared/infos' %>
    </div>
  </div>
  <%= paginate(@infos) %>
  <%= page_entries_info(@infos) %>
  <% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Microposts</h1>
  <%= link_to "新規会員登録", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>